@model TheShoeWebsite.Models.Order
@{
    ViewBag.Title = "Gởi đơn đặt hàng";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="Account-Module DefaultModule">
    <div id="ctl00_cphMain_ctl00_ctl02_ctl00_div_secure_checkout" class="Block ExpressCheckout Clear"
        style="display: block;">
        <div style="" id="CheckoutStepAccountDetails" class="ExpressCheckoutBlock ">
            <h2>
                Thông tin người nhận</h2>
                  @Html.ValidationSummary()
             @using (Html.BeginForm("SendOrder", "CheckOut", null, FormMethod.Post, new { id = "check-out" }))
             {
              
                <div class="editor-label">
                    @Html.LabelFor(m => m.FullName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.FullName)
                    @Html.ValidationMessageFor(m => m.FullName)
                </div>
                
                 @Html.ValidationSummary()
                <div class="editor-label">
                    @Html.LabelFor(m => m.Address)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Address)
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
                
                  @Html.ValidationSummary()
                <div class="editor-label">
                    @Html.LabelFor(m => m.PhoneNumber)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.PhoneNumber)
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>
                <p>
                    <input type="submit" value="Gởi hóa đơn" />
                </p>
            }
        </div>
    </div>
</div>
