@model IEnumerable<TheShoeWebsite.Models.Account>

@{
    ViewBag.Title = "Sanh sách thành viên";
}
 <div class="span6">
<h2>Danh sách thành viên</h2>

<p>
    @Html.ActionLink("Thêm mới ", "AccountCreate")
</p>
<table>
    <tr>
        <th>
           Tên đăng nhập
        </th>
        <th>
           Địa chỉ
        </th>
        <th>
           Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Họ và tên
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LoginName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "AccountEdit", new { id = item.AccountId }) |
            @Html.ActionLink("Details", "AccountDetails", new { id = item.AccountId }) |
            @Html.ActionLink("Delete", "AccountDelete", new { id = item.AccountId })
        </td>
    </tr>
}

</table>
</div>