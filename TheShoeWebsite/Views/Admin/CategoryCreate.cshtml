@model TheShoeWebsite.Models.Category
@{
    ViewBag.Title = "Thêm mới Chủng loại";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="defaultContent BlockContent">
    <h2>
        Thêm mới Chủng loại</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="editor-label">
            Tên chủng loại @*@Html.LabelFor(model => model.Description)*@
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    }
    <div>
        @Html.ActionLink("Quay về trang chủ", "CategoryList")
    </div>
</div>
</div>